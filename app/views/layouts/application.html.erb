<!DOCTYPE html>
<html>
    <head>
        <title>GrumbleHub</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="jumbotron">

            <nav class="navbar">
                <div class="navbar-header">
                    <%= image_tag "logo-surf-and-paddle.svg"%>
                </div>
                <p class="navbar-text">GrumbleHub</p>
                <form class="navbar-form navbar-right">
                    <% if current_user %>
                    <%= link_to "Logout!", logout_path, method: :delete, class: "btn btn-danger" %>
                    <%= link_to "Post!", new_post_path, class: "btn btn-success" %>
                    <%= link_to "About!", abouts_path, class: "btn btn-primary" %>
                <% else %>
                    <%= link_to "About!", abouts_path, class: "btn btn-primary" %>
                    <%= link_to "Login!", login_path, class: "btn btn-primary" %>
                    <%= link_to "Signup!", new_user_path, class: "btn btn-primary" %>
                    <% end%>
                    <div class="form-group has-feedback">
                        <input type="text" class="form-control" placeholder="Search">
                        <i class="glyphicon glyphicon-search form-control-feedback"></i>
                    </div>
                </form>
            </nav>

            <div class="container">
                <h1>GrumbleHub</h1>
                <h4>Social Media, with a Cathartic Intent</h4>
            </div>
        </div>
        <!--jumbotron-->
        <%= yield %>

        <footer>
            <div class="container-fluid">
                <div class="row footer_row">
                    <div class="col-md-1"></div>
                    <div class="col-md-6 footer_text">
                        GrumbleCo Â©2017
                    </div>
                </div>
            </footer>
        </body>
    </html>
