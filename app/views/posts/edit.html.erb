<% if @posts.errors.any? %>
<div class="bg-danger col-xc-12">
    <ul class="list-unstyled">
        <% @posts.errors.full_messages.each do |message| %>
        <li>
            <% message%>
        </li>
        <% end %>
    </ul>
</div>
<%end%>

<%=form_for @posts do |f| %>

<div>
    <%= f.label :title %>
    <%= f.text_field :title %>
</div>
<div>
    <%= f.label :body %>
    <%= f.text_area :body %>
</div>
<div>
    <%= f.label :user_id %>
    <%= f.select :user_id, User.all.collect{|u| [u.username, u.id]} %>
</div>
<div>
    <%= f.submit class: "btn btn-primary" %>
</div>

<%end%>
