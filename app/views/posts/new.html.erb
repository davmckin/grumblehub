<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <h1>Add your own post</h1>

        <%=form_for @post do |f| %>

        <div>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :picture %>
            <%= f.text_field :picture %>
        </div>
        <div>
            <%= f.label :body %>
            <%= f.text_area :body %>
        </div>

        <div>
            <%= f.submit class: "btn btn-primary" %>
        </div>

        <%end%>

    </div>
</div>
